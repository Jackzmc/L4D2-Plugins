Quickswitch Reloading like CS:GO in L4D2

idea from CS:GO Quickswitch Reloading: https://www.youtube.com/watch?v=VfdfbWhVP-8
videoshowcase: https://youtu.be/Ur0uNQTZhbU

-convar-
"l4d2_enable_reload_clip", 				"1", 	"enable this plugin?[1-Enable,0-Disable]"
"l4d2_enable_clip_recover", 			"1", 	"enable previous clip recover?"			
"l4d2_smg_reload_clip_time", 			"1.2",  "reload time for smg clip"				 
"l4d2_rifle_reload_clip_time", 			"1.2",  "reload time for rifle clip"			 
"l4d2_huntingrifle_reload_clip_time", 	"2.6",  "reload time for hunting rifle clip"		
"l4d2_pistol_reload_clip_time", 		"1.2",  "reload time for pistol clip"		     
"l4d2_dualpistol_reload_clip_time", 	"1.75", "reload time for dual pistol clip"      
"l4d2_smgsilenced_reload_clip_time", 	"1.1",  "reload time for smg silenced clip"      
"l4d2_smgmp5_reload_clip_time", 		"1.7",  "reload time for smg mp5 clip"      	
"l4d2_ak47_reload_clip_time", 			"1.2",  "reload time for ak47 clip"      		
"l4d2_rifledesert_reload_clip_time", 	"1.8",  "reload time for rifledesert clip"      
"l4d2_snipermilitary_reload_clip_time", "1.8",  "reload time for sniper military clip"   
"l4d2_grenade_reload_clip_time", 		"2.5",  "reload time for grenade clip"  		
"l4d2_sg552_reload_clip_time", 			"1.3",  "reload time for sg552 clip" 			
"l4d2_awp_reload_clip_time", 			"2.0",  "reload time for awp clip" 				
"l4d2_scout_reload_clip_time", 			"1.45", "reload time for scout clip"  			
"l4d2_mangum_reload_clip_time", 		"1.18", "reload time for mangum clip"  			

